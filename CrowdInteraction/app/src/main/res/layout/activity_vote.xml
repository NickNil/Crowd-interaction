<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="hig.no.crowdinteraction.VoteActivity">

    <Button
        android:id="@+id/voteButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Vote"
        android:layout_below="@+id/scorePicker"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/sport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sport:"
        android:layout_toStartOf="@+id/voteButton"
        android:layout_below="@+id/Title"
        android:layout_toLeftOf="@+id/voteButton"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event:"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/sport"
        android:layout_alignLeft="@+id/sport"
        android:layout_alignStart="@+id/sport" />

    <TextView
        android:id="@+id/athlete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Athlete:"
        android:layout_below="@+id/event"
        android:layout_alignRight="@+id/sport"
        android:layout_alignEnd="@+id/sport"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="Voting"
        android:textAppearance="?android:attr/textAppearanceMedium" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView"
        android:layout_alignLeft="@+id/lastname"
        android:layout_alignStart="@+id/lastname"
        android:layout_alignTop="@+id/sport" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/lastname"
        android:layout_above="@+id/athlete"
        android:layout_alignLeft="@+id/scorePicker"
        android:layout_alignStart="@+id/scorePicker" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/nationality"
        android:layout_alignBottom="@+id/athlete"
        android:layout_alignLeft="@+id/lastname"
        android:layout_alignStart="@+id/lastname" />

    <NumberPicker
        android:id="@+id/scorePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nationality"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp" />

</RelativeLayout>
