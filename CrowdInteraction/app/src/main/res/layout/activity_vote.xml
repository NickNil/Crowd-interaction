<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="hig.no.crowdinteraction.VoteActivity">

    <Button
        android:id="@+id/voteButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Vote"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/Athlete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Athlete:"
        android:layout_toStartOf="@+id/voteButton"
        android:layout_below="@+id/Title"
        android:layout_toLeftOf="@+id/voteButton"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event:"
        android:layout_marginTop="62dp"
        android:layout_below="@+id/Athlete"
        android:layout_alignLeft="@+id/Athlete"
        android:layout_alignStart="@+id/Athlete" />

    <TextView
        android:id="@+id/athlete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Starting #:"

        android:layout_marginTop="23dp"
        android:layout_below="@+id/Athlete"
        android:layout_alignLeft="@+id/Athlete"
        android:layout_alignStart="@+id/Athlete" />

    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="Voting"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:id="@+id/scorePicker"
        android:ems="4"
        android:maxLength="2"
        android:textAlignment="center"
        android:textDirection="00"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/event"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/lastname"
        android:layout_alignTop="@+id/Athlete"
        android:layout_alignLeft="@+id/Title"
        android:layout_alignStart="@+id/Title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView4"
        android:layout_alignTop="@+id/athlete"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

</RelativeLayout>
